                <TextBox Name="HisDBUser" HorizontalAlignment="Left" Height="26" Margin="2,28,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="93" TextChanged="TextBox_TextChanged" Grid.Column="5" Grid.Row="2" Grid.RowSpan="2"/>
                <TextBox Name="LisIP" HorizontalAlignment="Left" Height="26" Margin="0,11,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="218" Grid.Column="4" Grid.Row="3"/>
                <TextBox Name="LisDBPSW" HorizontalAlignment="Left" Height="26" Margin="21,11,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="96" Grid.Column="6" Grid.Row="3"/>
                <TextBox Name="LisDBUser" HorizontalAlignment="Left" Height="26" Margin="2,11,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="93" Grid.Column="5" Grid.Row="3"/>
                <TextBlock HorizontalAlignment="Left" Height="26" Margin="2,4,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="99" RenderTransformOrigin="1.822,6.278" Grid.Column="5" Grid.Row="1" Grid.RowSpan="2"><Run Text="数据库"/><Run Text="用户名"/></TextBlock>
