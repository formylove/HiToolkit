                <Label Content="Matrix" HorizontalAlignment="Left" Height="24" Margin="56,49,0,0" VerticalAlignment="Top" Width="70" Grid.ColumnSpan="2" Grid.Row="4" Grid.Column="3"/>
                <Label Content="Lis" HorizontalAlignment="Left" Height="24" Margin="53,11,0,0" VerticalAlignment="Top" Width="70" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="3" Grid.Column="3"/>
                <Label Content="His" HorizontalAlignment="Left" Height="24" Margin="53,31,0,0" VerticalAlignment="Top" Width="70" FontWeight="Bold" Grid.ColumnSpan="2" Grid.Row="2" Grid.RowSpan="2" Grid.Column="3"/>
                <TextBlock Name="LocalIP" Grid.Column="4" HorizontalAlignment="Left" Height="21" Margin="10,130,0,0" Grid.Row="6" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="177"/>
                <Label Content="实例名" HorizontalAlignment="Left" Height="24" Margin="43,1,0,0" VerticalAlignment="Top" Width="70" Grid.Column="7" Grid.RowSpan="2" Grid.Row="1"/>
                <Button Name="CopyB" Content="↓↓↓ 复制 ↓↓↓" Grid.Column="4" HorizontalAlignment="Left" Margin="78,18,0,0" Grid.Row="4" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.16,-0.158" Click="Button_Click_1" Height="19"/>
                <CheckBox Name="IsNewHIS" Content="新HIS" Grid.Column="6" HorizontalAlignment="Left" Margin="21,49,0,0" Grid.Row="5" VerticalAlignment="Top" Height="26" Width="80" IsChecked="True"/>
                <StatusBar Grid.ColumnSpan="4" HorizontalAlignment="Left" Height="22" Margin="3,151,0,0" Grid.Row="6" VerticalAlignment="Top" Width="531" Grid.Column="3"/>
                <Popup>
                    <Grid Background="#FFE5E5E5" Height="100" Width="100"/>
                </Popup>

            </Grid>
            <!--添加其余的TabItem-->
        </TabItem>
        <TabItem Header="Java环境变量">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="17*"/>
                    <ColumnDefinition Width="41*"/>
                    <ColumnDefinition Width="828*"/>
                </Grid.ColumnDefinitions>
                <CheckBox Name="PCheckBox" Margin="10,10,0,0"
          Content="Popup Window" Grid.ColumnSpan="3"/>
                <Button HorizontalAlignment="Left" Width="129" Margin="10,10,0,0" Grid.ColumnSpan="3">
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.Click">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation
            Storyboard.TargetName="theTransform"
            Storyboard.TargetProperty="(RotateTransform.Angle)"
            From="0" To="360" Duration="0:0:5" AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                    Start Animation
                </Button>
                <Popup IsOpen="{Binding ElementName=PCheckBox,Path=IsChecked}"
       PlacementTarget="{Binding ElementName=PCheckBox}"           
       AllowsTransparency="True"
       PopupAnimation="Slide"
       HorizontalOffset="150"
       VerticalOffset="100" Grid.ColumnSpan="3"
       >

                    <Canvas Width="100" Height="100" Background="Green" Margin="150">
                        <Canvas.RenderTransform>
                            <RotateTransform x:Name="theTransform" />
                        </Canvas.RenderTransform>
                        <TextBlock TextWrapping="Wrap" Foreground="LightGray">
      Rotating Popup
                        </TextBlock>
                    </Canvas>
                </Popup>
            </Grid>
        </TabItem>


    </TabControl>

</Window>
